rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isStudent() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Admin collection - only authenticated admins can read/write their own data
    match /admins/{adminId} {
      allow read, write: if isAdmin() && isOwner(adminId);
    }

    // Courses collection - public can read, admins can write
    match /courses/{courseId} {
      allow read: if true; // Public read access
      allow write, update, delete: if isAdmin();
    }

    // Portfolio collection - public can read, admins can write
    match /portfolio/{portfolioId} {
      allow read: if true; // Public read access for portfolio display
      allow write, update, delete: if isAdmin();
    }

    // Students collection - admins and owner can read/write
    match /students/{studentId} {
      allow read: if isAdmin() || isOwner(studentId);
      allow write, update: if isAdmin() || isOwner(studentId);
      allow create: if isAdmin() || isStudent();
      allow delete: if isAdmin();
    }

    // Enrollments collection - key rules for certificate verification
    match /enrollments/{enrollmentId} {
      // PUBLIC: Anyone can read approved certificates for verification (no auth required)
      allow read: if resource.data.approvedForCertificate == true;
      
      // Students: Can read their own enrollments
      allow read: if request.auth != null && isStudent() && request.auth.uid == resource.data.studentId;
      
      // Students: Can create their own enrollments
      allow create: if request.auth != null && isStudent() && request.resource.data.studentId == request.auth.uid;
      
      // Students: Can update non-critical fields in their own enrollments
      allow update: if request.auth != null && isStudent() && request.auth.uid == resource.data.studentId && 
                       !request.resource.data.approvedForCertificate;
      
      // Admins: Full access to read, write, update, delete
      allow write, delete: if isAdmin();
      allow update: if isAdmin();
    }

    // Contact forms and inquiries - public can create, admins can manage
    match /contacts/{contactId} {
      allow create: if true; // Anyone can submit contact forms
      allow read, update, delete: if isAdmin();
    }

    // Analytics collection - only admins can read/write
    match /analytics/{analyticsId} {
      allow read, write, update, delete: if isAdmin();
    }

    // Course PDFs collection - admins can manage, students can read their own
    match /course_pdfs/{pdfId} {
      allow read: if isAdmin() || (isStudent() && exists(/databases/$(database)/documents/enrollments/$(pdfId)) && 
                    get(/databases/$(database)/documents/enrollments/$(pdfId)).data.studentId == request.auth.uid);
      allow write, update, delete: if isAdmin();
      allow create: if isAdmin();
    }

    // Catch-all: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
