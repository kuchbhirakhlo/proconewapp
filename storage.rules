rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    function isStudent() {
      return request.auth != null &&
        firestore.exists(/databases/(default)/documents/students/$(request.auth.uid));
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // IMPORTANT: Course PDFs can ONLY be accessed through the secure API endpoint
    // Direct access to PDFs is DENIED to prevent bypassing enrollment checks
    match /course_pdfs/{fileName} {
      // Allow admins to upload PDFs only
      allow write: if isAdmin() && isAuthenticated() &&
        request.resource.contentType.matches('application/pdf');

      // Allow admins to delete PDFs
      allow delete: if isAdmin() && isAuthenticated();

      // DENY direct read access - must use secure API endpoint instead
      allow read: if false;
    }

    // Other storage paths can remain open for admins to manage
    match /{allPaths=**} {
      allow write: if isAdmin() && isAuthenticated();
      allow delete: if isAdmin() && isAuthenticated();
      allow read: if false; // Deny all public read access
    }
  }
}